<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#D0228E" />
            <gradient android:angle="-90" android:startColor="#6CDF36" android:endColor="#5E854C"  />

        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#DC1F1F" />
            <solid android:color="#F18C8C"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#D0228E" />
            <gradient android:angle="-45" android:startColor="#EA2FDC" android:endColor="#E31EA4" />
        </shape>
    </item>
</selector>