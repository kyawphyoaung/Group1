<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:layout_gravity="top"
            android:layout_marginTop="0dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/rumbgscnd" />

    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:src="@android:drawable/button_onoff_indicator_on"
        android:text="Order" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_home"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableTop="@drawable/ic_home_black_24dp"
            android:text="Home" />

        <Button
            android:id="@+id/btn_shop"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableTop="@drawable/ic_store_black_24dp"
            android:text="Shop" />

        <Button
            android:id="@+id/btn_new"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableTop="@drawable/ic_fiber_new_black_24dp"
            android:text="New" />

        <Button
            android:id="@+id/btn_cart"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ic_shopping_cart_black_24dp"
            android:text="Cart" />
        </LinearLayout>
    </LinearLayout>
