<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DragandDrop">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textColor="#0F0F0F"
    android:layout_centerHorizontal="true"
        android:textSize="20sp"

        android:text="Design Your Cake" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDestination"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle_border"
                android:tag="Destination" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#E91E63"
                android:textSize="17sp"
                android:text="Choose Flavour" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnchoco"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="28dp"
                    android:contentDescription="Chocolate Flavour"
                    android:tag="choco"
                    app:srcCompat="@drawable/chocolate" />


                <ImageView
                    android:id="@+id/btnvanilla"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="Vanilla Flavour"
                    android:tag="vanilla"
                    app:srcCompat="@drawable/vanilla" />
                <ImageView
                    android:id="@+id/btnstraw"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="Strawberry Flavour"
                    android:tag="strawberry"
                    app:srcCompat="@drawable/strawberry" />
            </LinearLayout>

            <Button
                android:id="@+id/imageView4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="Strawberry"
                android:src="@drawable/btn_shape_round"
                android:background="@drawable/btn_shape_round"
                android:padding="8dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/circle_border" />

        </LinearLayout>

    </LinearLayout>

