<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            app:cardBackgroundColor="@color/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">

            <!--app:cardElevation="5dp">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImageViewItem"
                    android:layout_width="121dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"
                    app:srcCompat="@mipmap/ic_launcher" />
                <!--<de.hdodenhof.circleimageview.CircleImageView-->
                <!--android:id="@+id/ImageViewItem"-->
                <!--android:layout_width="120dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_margin="0dp"-->
                <!--app:srcCompat="@mipmap/ic_launcher"-->
                <!--/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TextViewItem1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:paddingBottom="5dp"
                        android:text="Cake Name" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TextViewItem2"
                            android:layout_width="126dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="15dp"
                            android:paddingRight="15dp"
                            android:textColor="#ffffff"
                            android:textSize="15sp"
                            android:text="Flavor" />
                        <TextView
                            android:id="@+id/TextViewItem3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/realwhite"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            android:text="Price" />

                        <CheckBox android:layout_height="wrap_content"
                            android:layout_margin="5dip" android:id="@+id/CheckBoxSelected"
                            android:focusable="false" android:clickable="false"
                            android:layout_gravity="center" android:layout_width="wrap_content"></CheckBox>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>


