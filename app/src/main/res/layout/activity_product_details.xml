<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway"
            android:paddingTop="10dp"
            android:text="Cake Details"
            android:textColor="#ffffff"
            android:textSize="30dip"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutHeader"
        android:layout_width="wrap_content"
        android:layout_height="288dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/ImageViewProduct"
            android:layout_width="350dp"
            android:layout_height="286dp"
            android:layout_margin="0dip"
            android:adjustViewBounds="false"
            android:background="#FCF7F7"
            android:padding="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/vcake"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/TextViewProductTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/raleway"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:text="Product Name"
                android:textColor="@color/productname"
                android:textSize="26dip"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/TextViewProductDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:paddingRight="10dp"
                android:text="Product description"
                android:textAlignment="center"
                android:textColor="@color/productdesc"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:fontFamily="@font/raleway"
            android:text="Flavor:"
            android:textColor="@color/black"
            android:textSize="18dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextViewProductFlavour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="TextView"
            android:fontFamily="@font/raleway"
            android:textAlignment="textEnd"
            android:textColor="@color/productname"
            android:textSize="18dip"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway"
            android:text="Icing:"
            android:textSize="18dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="TextView"
            android:fontFamily="@font/raleway"
            android:textAlignment="textEnd"
            android:textColor="@color/productname"
            android:textSize="18dip"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway"
            android:text="Side Decoration:"
            android:textSize="18dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="TextView"
            android:fontFamily="@font/raleway"
            android:textAlignment="textEnd"
            android:textColor="@color/productname"
            android:textSize="18dip"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">
        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway"
            android:text="Filling:"
            android:textSize="18dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="TextView"
            android:fontFamily="@font/raleway"
            android:textAlignment="textEnd"
            android:textColor="@color/productname"
            android:textSize="18dip"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextViewProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/impact"
            android:paddingRight="10dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/money"
            android:textSize="24dip"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonAddToCart"
                style="@style/Theme.MaterialButton"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:background="@drawable/round_corners"
                android:drawableLeft="@drawable/cartpng"
                android:elevation="10dp"
                android:fontFamily="@font/raleway"
                android:paddingLeft="20dp"
                android:text="Add to Cart"
                android:textColor="@color/browser_actions_bg_grey"
                android:textSize="18dp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/BackButton"
                style="@style/Theme.MaterialButton"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:layout_margin="5dip"
                android:background="@drawable/round_corners"
                android:elevation="10dp"
                android:fontFamily="@font/raleway"
                android:text="Back to list"
                android:onClick="Backbutton"
                android:textColor="@color/browser_actions_bg_grey"
                android:textSize="18dp"

                android:textStyle="bold"></Button>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>